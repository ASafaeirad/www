---
interface Props {
  concepts: Array<{
    name: string;
    url: string;
    resourceCount: number;
  }>;
}

const { concepts } = Astro.props;
---

<ul class="list">
  {
    concepts.map((concept) => (
      <li>
        <a href={concept.url}>{concept.name}</a>
        <div class="divider" />
        <p class="resources">
          {concept.resourceCount}
          resource{concept.resourceCount !== 1 ? "s" : ""}
        </p>
      </li>
    ))
  }
</ul>

<style>
  .list {
    list-style: none;

    & li {
      &:not(:last-of-type) {
        margin-bottom: 8px;
      }

      display: flex;
      align-items: center;
      column-gap: 8px;

      &:hover {
        & .divider {
          border-color: var(--color-neutral-300);
        }
      }

      & a {
        color: var(--color-foreground);
        font-weight: 500;
        text-decoration: none;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        flex-shrink: 1;
      }

      & .divider {
        min-width: 20px;
        flex-grow: 1;
        border-bottom: 1px solid var(--color-neutral-200);
        transition: 0.2s;
      }

      & .resources {
        font-size: var(--font-sm);
        color: var(--color-foreground-subtle);
        font-variant-numeric: tabular-nums;
        flex-shrink: 0;
        white-space: nowrap;
      }
    }
  }
</style>
